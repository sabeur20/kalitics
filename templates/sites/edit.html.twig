{% extends 'base.html.twig' %}

{% block title %}Chantiers{% endblock %}

{% block body %}
    <div class="card-header">
        <h3 class="card-title">Modifier un chantier</h3>
    </div>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-block alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="alert-heading margin-bottom-10"><i class="ti-check"></i> Success!</h4>
            <p class="margin-bottom-10">
                {{ flashMessage }}
            </p>
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-block alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="alert-heading margin-bottom-10"><i class="ti-check"></i> Error!</h4>
            <p class="margin-bottom-10">
                {{ flashMessage }}
            </p>
        </div>
    {% endfor %}
    <!-- start: STRIPED ROWS -->
    <div class="container-fluid container-fullw">
        <div class="row">

            <div class="col-lg-12 col-md-12">
                <div class="panel panel-white">
                    <div class="panel-body">
                        <form role="form"  method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>
                                    {{ form_label(form.name) }}
                                </label>
                                {{ form_widget(form.name, { 'attr':{'class':'form-control'} }) }}
                                {{ form_errors(form.name) }}
                            </div>

                            <div class="form-group">
                                <label>
                                    {{ form_label(form.address) }}
                                </label>
                                {{ form_widget(form.address, { 'attr':{'class':'form-control'} }) }}
                                {{ form_errors(form.address) }}
                            </div>
                            <div class="form-group">
                                <label>
                                    {{ form_label(form.startDate) }}
                                </label>
                                {{ form_widget(form.startDate, { 'attr':{'class':'form-control'} }) }}
                                {{ form_errors(form.startDate) }}
                            </div>

                            {{ form_rest(form) }}
                            <button type="submit" class="btn btn-block btn-primary add-row">
                                MOFIDIER <i
                                        class="fa fa-edit"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- end: STRIPED ROWS -->
{% endblock %}
